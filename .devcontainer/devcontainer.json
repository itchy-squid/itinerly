{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "workspaceFolder": "app",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        // list files for auto-open here, i think
      ]
    }
  },
  "portsAttributes": {
    "44450": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [44450]
}
